<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="bottom" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="bottom"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/playlist_list_item_drag_image"
			android:layout_width="@dimen/view_list_item_height"
			android:layout_height="match_parent"
			android:adjustViewBounds="true"
			android:contentDescription="@string/player_entity_drag_image"
			android:scaleType="centerInside"
			android:layout_gravity="center_vertical"
			android:tint="?iconColor"
			android:src="@drawable/ic_drag" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="bottom"
			android:orientation="vertical" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/playlist_list_item_text1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:ellipsize="end"
					android:layout_weight="1"
					android:paddingLeft="1dp"
					android:paddingRight="1dp"
					android:singleLine="true"
					android:textSize="16sp" />

				<TextView
					android:id="@+id/playlist_list_item_priority"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="1dp"
					android:paddingRight="1dp"
					android:singleLine="true"
					android:textSize="12sp" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/playlist_list_item_text2"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:ellipsize="end"
					android:layout_weight="1"
					android:paddingLeft="1dp"
					android:paddingRight="1dp"
					android:singleLine="true"
					android:textSize="18sp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/playlist_list_item_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="1dp"
					android:paddingRight="1dp"
					android:singleLine="true"
					android:textSize="14sp" />

			</LinearLayout>
			
		</LinearLayout>

	</LinearLayout>

</LinearLayout>
